$("#movie_container").html("<%= j(render 'search_results') %>");
$("#page").val(<%= @page %>);
$("#direction").val('');
<% if !@category.nil? %>
	$("#category").val("<%= @category %>");
<% else %>
$("#category").val("");
<% end %>

// set page number in form, remove directionality

$(".left_col").on("click", function() {
	$("#direction").val('prev');
	$("#movie_container").html("");
	$("#search_form").submit();
});

$(".right_col").on("click", function() {
	$("#direction").val('next');
	$("#movie_container").html("");
	$("#search_form").submit();
});
// initialize pagination buttons, on click submit form

$('.readonly_rating_xs').rating({
    	displayOnly: true, 
    	step: 0.1,
    	size: "xs"
});