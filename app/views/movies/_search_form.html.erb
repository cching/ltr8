<%= form_tag(search_movies_path, method: :get, :id => 'search_form') do %>
<div class="row">
  <div class="col-xs-1"></div>
  <div class="col-xs-4">
    <div class="input-field">
            <i class="material-icons prefix">search</i>
            <%= text_field_tag :title %>
            <label for="icon_prefix">Search by title</label>
    </div>
  </div>
    <div class="col-xs-2">
   <div class="input-field">
    <select>
      <option value="" disabled selected>Genre</option>
      <option value="1">Option 1</option>
      <option value="2">Option 2</option>
      <option value="3">Option 3</option>
    </select>
  </div>
  </div>
  <div class="col-xs-2 button_col">
    <a class="waves-effect waves-light btn"><i class="material-icons right">keyboard_arrow_down</i>Title</a>
  </div>
  <div class="col-xs-2 button_col">
    <a class="waves-effect waves-light btn"><i class="material-icons right">keyboard_arrow_down</i>Release Date</a>
  </div>

  <div class="col-xs-1"></div>
</div>
<% end %>